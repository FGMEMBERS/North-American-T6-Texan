<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <sim include="Systems/views.xml">

    <description>North American T6 Texan (YASim)</description>
    <author>Emmanuel BARANGER (3D/FDM)</author>
    <status>devel</status>

    <fuel-fraction>1</fuel-fraction>

    <sound>
      <audible>true</audible>
      <path>Aircraft/North-American-T6-Texan/Sounds/t6-sound.xml</path>
    </sound>

    <model>
      <path>Aircraft/North-American-T6-Texan/Models/t6.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>

    <submodels> 
      <serviceable type="bool">true</serviceable>
      <path>Aircraft/North-American-T6-Texan/Models/Effects/guns/submodels.xml</path>
    </submodels>

    <startup>
      <splash-texture>Aircraft/North-American-T6-Texan/t6-splash.png</splash-texture>
    </startup>

    <multiplay>
      <chat_display>1</chat_display>
      <generic> 
        <int   n="0"  type="int">  0 </int>                                         <!-- 0 immat -->
        <int   n="1"  type="int">  0 </int>                                         <!-- 1 immat -->
        <int   n="2"  type="int">  0 </int>                                         <!-- 2 immat -->
        <int   n="3"  type="int">  0 </int>                                         <!-- 3 immat -->
        <int   n="4"  type="int">  0 </int>                                         <!-- 4 immat -->
        <int   n="5"  type="int">  0 </int>                                         <!-- 5 immat -->
        <int   n="6"  type="bool"> 1 </int>                                         <!-- 6 -->
        <int   n="7"  type="int">  0 </int>                                         <!-- 7  -->
        <int   n="8"  alias="/systems/electrical/outputs/nav-lights">  0 </int>     <!-- 8 nav-lights -->
        <int   n="9"  alias="/sim/model/lights/beacon/state">  false </int>         <!-- 9 strobe-lights -->
        <float n="0"  alias="/sim/model/door-positions/crew/position-norm"/>
        <float n="1"  alias="/sim/model/door-positions/passenger/position-norm"/>
        <float n="2"  alias="/position/gear-agl-m"> 0 </float>                      <!-- altitude for MP shadow -->
        <float n="3"  alias="/position/altitude-ft"> 0 </float>                     <!-- altitude for Smoke/Trail -->
        <float n="4"  alias="/engines/engine[0]/rpm"/>
        <float n="5"  alias="/engines/engine[0]/cranking"/>
        <float n="6"  alias="/gear/gear[0]/wow/"/>
        <float n="7"  alias="/gear/gear[1]/wow/"/>
        <float n="8"  alias="/gear/gear[2]/wow/"/>
        <float n="9"  alias="/gear/gear[0]/rollspeed-ms"/>
        <float n="10" alias="/gear/gear[1]/rollspeed-ms"/>
        <float n="11" alias="/gear/gear[2]/rollspeed-ms"/>
        <!-- For Bombable -->
        <int type="int" n="10" alias="controls/armament/trigger">0</int>
        <string n="9" type="string" />
      </generic>
    </multiplay>
    
    <help include="Systems/help.xml"/>

    <menubar include="Dialogs/t6-menu.xml"/>

  </sim>

  <input include="Systems/t6-keyboard.xml"/>
  
  <engines include="Systems/engines.xml"/>
  
  <consumables include="Systems/consumables.xml"/>
  
  <surface-positions>
    <wing-fold-pos-norm alias="/instrumentation/doors/wings/position-norm"/>
  </surface-positions>

  <nasal>
    <doors>
      <file>Aircraft/North-American-T6-Texan/Nasal/doors.nas</file>
    </doors>
    <t6>
      <file>Aircraft/North-American-T6-Texan/Nasal/liveries.nas</file>
      <file>Aircraft/North-American-T6-Texan/Nasal/light.nas</file>
    </t6>
    <guns>
      <file>Aircraft/North-American-T6-Texan/Nasal/weapons.nas</file>
      <file>Aircraft/North-American-T6-Texan/Nasal/revi.nas</file>
    </guns>
  </nasal>

</PropertyList>
