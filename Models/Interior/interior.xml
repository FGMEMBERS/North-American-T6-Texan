  <!-- Canopy -->
  <animation>
    <name>IntCanopyA</name>
    <object-name>intverriereA</object-name>
    <object-name>intvitreverriereA</object-name>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>IntCanopyA</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.crew.toggle();</script>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>translate</type>
    <object-name>IntCanopyA</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <factor> 0.6 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <name>IntCanopyB</name>
    <object-name>intverriereB</object-name>
    <object-name>intvitreverriereB</object-name>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>IntCanopyB</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.passenger.toggle();</script>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>translate</type>
    <object-name>IntCanopyB</object-name>
    <property>sim/model/door-positions/passenger/position-norm</property>
    <factor> -0.63 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>
