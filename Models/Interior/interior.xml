<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>intverriereA</object-name>
    <object-name>intverriereB</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intvitreverriereA</object-name>
    <object-name>intvitreverriereB</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/North-American-T6-Texan/Models/Effects/Glass/glass</inherits-from>
    <object-name>intvitres</object-name>
    <object-name>intvitreverriereA</object-name>
    <object-name>intvitreverriereB</object-name>
  </effect>
  
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>intvitres</object-name>
    <object-name>intvitreverriereA</object-name>
    <object-name>intvitreverriereB</object-name>
  </effect>
  
  <!-- Pilote -->
